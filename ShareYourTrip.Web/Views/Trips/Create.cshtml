@model ShareYourTrip.Entities.DataModels.Trip

@{
    ViewBag.Title = "Create";
}

<h2>Crear un nuevo viaje...</h2>

<div>

    @{Html.RenderAction("AddDestination", "Trips");}
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
