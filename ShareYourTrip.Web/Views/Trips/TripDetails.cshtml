@model ShareYourTrip.Entities.DataModels.Trip
@using ShareYourTrip.Entities.DataModels

@{
    ViewBag.Title = "TripDetails";
}

<h2>TripDetails</h2>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TripName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TripName)
        </dd>

    </dl>
</div>
<div>
    @foreach(Destination dest in Model.Destinations)
    {
        <p>@dest.City.Name - @dest.FromDate - @dest.ToDate</p>
    }
</div>
